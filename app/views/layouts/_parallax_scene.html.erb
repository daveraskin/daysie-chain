<div class="row scene-container">
  <% grass_count = 0 %>
  <% tree_count = 0 %>
  <% bush_count = 0 %>
  <ul id="scene">
    <li class="layer" data-depth="0.20"><%= image_tag("daysie-foreground.png", :alt => "foreground", :class => "foreground") %></li>
    <% while grass_count < 4 do %>
      <li class="layer" data-depth="0.20"><%= image_tag("daysie-foreground-grass-nubs.png", :alt => "grass", :class => "grass")%></li>
      <% grass_count +=1 %>
    <% end %>
    <% while tree_count < 2 do %>
      <li class="layer" data-depth="0.10"><%=image_tag("daysie-foreground-tree.png", :alt => "tree", :class => "tree")%></li>
    <% tree_count +=1%>
    <% end %>
    <% while bush_count < 3 do %>
    <li class="layer" data-depth="0.10"><%=image_tag("daysie-foreground-bush.png", :alt => "bush", :class => "bush")%></li>
      <% tree_count +=1%>
    <% end %>
    <li class="layer" data-depth="0.20"><%= image_tag("daysie-chain-logo.png", :alt => "logo", :class => "logo")%></li>
  </ul>
</div>