<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h1 class="modal-title">Edit User Info</h4>

</div>
<div class="modal-body">
  <h4> True change comes from within... </h4>
  <small> ...this form, that is. </small>
   <%= bootstrap_form_for @current_user, :html => {:id => "edit_user_form"} do |f| %>
          <%= f.text_field :firstname, placeholder: 'e.g. Barack' %>
          <%= f.text_field :lastname, placeholder: 'e.g. DiCaprio' %>
          <%= f.text_field :email, placeholder: 'e.g. barack.dicaprio@netscape.com' %>
          <%= f.text_field :tel, placeholder: 'e.g. (305) 867 - 5309' %>
          <%= f.file_field :picture %>
          <%= f.hidden_field :logged_in?, value: 'yes' %>
          <%= f.hidden_field :active, value: 'false' %>
          <%= f.hidden_field :group_id, value: "", id: "group_id_field" %>



  </span>
  <span class="pull-right">
    <button type="button" class="btn btn-default" id="other_close_btn" data-dismiss="modal">Close</button>
    <%= f.primary "Submit" %>
    <% end %>
  </span>

</div>
<div class="modal-footer">


</div>