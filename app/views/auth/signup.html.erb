<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= bootstrap_form_for @current_user, :html => {:id => "edit_user_form"} do |f| %>
              <%= f.text_field :firstname, placeholder: 'e.g. Barack', label: 'First Name' %>
              <%= f.text_field :lastname, placeholder: 'e.g. DiCaprio', label: 'Last Name'%>
              <%= f.text_field :tel, placeholder: 'e.g. (305) 867 - 5309', label: 'Phone Number'%>
              <%= f.hidden_field :logged_in?, value: 'yes' %>
              <%= f.hidden_field :active, value: 'false' %>
              <%= f.hidden_field :group_id, value: "", id: "group_id_field" %>
      <%= f.primary "Submit" %>
      <% end %>
    </div>
  </div>
</div>